template(name='user_tips')  
    .ui.center.aligned.header 
        i.hand.holding.heart.icon
        |user tips
    .ui.grid
        .eight.wide.column
            .ui.header tips given
            .scrolling
                .ui.items
                    each tips
                        .item
                            .content
                                a(href="/post/#{_id}/view") 
                                    img.ui.fluid.rounded.image(src="{{c.url image_id }}" class=currentUser.invert_class)
                                a.ui.header(href="/post/#{_id}/view") 
                                    |#{title}
                                div
                                if is_admin
                                    +remove_button
                                    +print_this
                                a.ui.button(href="/post/#{post_id}")
                                    |view post
                                //- div
                                +target_info
                                +creation_info
        .eight.wide.column
            .ui.header tips received
