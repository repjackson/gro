                    a.ui.circular.icon.large.button(href="/")
                        i.left.chevron.big.icon
                    .ui.center.aligned.large.inline.header #{title}
            .row
                .sixteen.wide.column 
                    // a.ui.small.center.aligned.grey.header(href=url target='_window')
