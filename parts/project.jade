template(name='project_card')
    a.card(href="/project/#{_id}/view")
        .image
            if icon 
                +icolorlg name=icon
            else
                img.ui.raw.image(src="{{c.url image_id width=400 height=300 crop='fill'}}")    
        .content
            a.ui.header(href="/project/#{_id}/view")
                |#{location}: #{title}
            |!{description}
        


template(name='project_view')
    with current_doc
        .ui.stackable.padded.grid
            .centered.middle.aligned.row
                .four.wide.center.aligned.column
                    // if can_edit
                    a(href="/m/project" title='projects')
                        +icolorlg n='project' cl='ui inline image pointer'
                .eight.wide.center.aligned.column
                    if icon
                        +icolorlg name=icon cl='ui inline image'
                    else
                        +icolorlg n='project' cl='ui inline image'
                    .ui.center.aligned.inline.header 
                        small viewing project
                        |#{title}
                .four.wide.center.aligned.column
                    if can_edit
                        a.edit_project(href="/project/#{_id}/edit")
                            i.big.blue.pencil.icon
            .row 
                .four.wide.column
                    .ui.header
                        i.marker.red.icon 
                        |#{location}
                    .ui.header 
                        small leader
                    a.ui.header(href="/u/#{_author.username}") 
                        img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                        |#{_author.username}
                    +image_view k='image_id' l='image' d=true
                .eight.wide.column
                    +number_view k='bounty' l='bounty' d=true
                    +textarea_view k='description' l='description' d=true
                    div 
                    +array_view k='tags' l='tags' d=true
                    .spacer
                    .spacer
                    +comments
                    //- +array_view k='location_tags' l='location_tags' d=true
                .four.wide.column
                    .ui.header 
                        +icon n='project'
                        |projects
                    //- .ui.fluid.green.button.submit
                    //-     i.checkmark.icon
                    //-     |submit
template(name='project_edit')
    with current_doc
        .ui.stackable.padded.grid
            .centered.middle.aligned.row 
                .four.wide.center.aligned.column
                    a.ui.green.big.icon.circular.button(href="/project/#{_id}/view" title='save')
                        i.checkmark.big.icon
                .eight.wide.center.aligned.column
                    .ui.inline.header 
                        +icon n='project'
                        small edit project
                        |#{title}
                .four.wide.center.aligned.column
                    i.link.big.red.remove.icon.delete_item(title='delete project')
            .row 
                .five.wide.column
                    +text_edit k='title' i='header' d=true
                    +image_edit k='image_id' l='image' d=true
                    +text_edit k='location' l='location' i='marker' d=true
                    +icon_edit k='icon' l='icon' d=true
                    div 
                    +array_edit k='tags' l='tags' d=true
                .six.wide.column
                    +textarea_edit k='description' l='description' d=true
                    +textarea_edit k='goals' l='goals' d=true
                    //- +array_edit k='location_tags' l='location_tags' d=true
                .five.wide.column
                    +boolean_edit k='published' d=true
