template(name='user_posts')  
    .ui.center.aligned.header 
        i.hand.holding.heart.icon
        |user posts
    .scrolling
        each posts
            .ui.segment
                img.ui.fluid.rounded.image(src="{{c.url image_id }}" class=currentUser.invert_class)
                a.ui.header(href="/post/#{_id}/view") 
                    |#{title}
                div
                    |$#{usd_price}
                    |#{point_price}pts
                div
                | !{body}
                div
                if is_admin
                    +remove_button
                    +print_this
                
                //- div
                +author_info
                +creation_info
