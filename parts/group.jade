template(name='group_post_card')
    .ui.card
        if image_id
            a(href="/g/#{group}/p/#{_id}")
                img.ui.image.zoomer(src="{{c.url image_id }}" class=currentUser.invert_class)
        if image_link
            a(href="/g/#{group}/p/#{_id}")
                +image_link_view key='image_link' direct=true
        if youtube_id
            +youtube_view key='youtube_id' label='youtube id' direct=true
        .content
            // a.ui.header.zoomer(href="/g/#{group}/p/#{_id}") #{title}
            a.ui.left.aligned.inline.header.pointer.view_post.zoomer(class=emotion_color)
                |#{title}
            span(title="made #{made_when}")
                |{{made_when}}
            if _author_username
                a.ui.basic.label(href="/u/#{_author_username}")
                    i.large.user.outline.icon
                    |#{_author_username}
            if is_admin
                +text_edit key='group' label='slug' direct=true
            .f12.pointer.view_post
                |!{content}
            // a(href="/g/#{group}/p/#{_id}")
            if raw
                |!{raw}
            if session_is 'view_detail'            
                each tags
                    +group_flat_tag_picker
                a.ui.big.icon.basic.button(href="/g/#{group}/p/#{_id}")
                    i.right.chevron.big.icon
                +voting_full
                +tip
                // | #{points}
                // i.thumbs.up.outline.grey.icon
                // | #{comments}
                // i.comment.outline.grey.icon
                if time_tags
                    i.clock.icon
                    each time_tags
                        .ui.tiny.label #{this}
                if is_admin
                    +remove_button
                    +print_this
                +comments
                if doc_sentiment_label
                    +doc_emotion_small        
   
