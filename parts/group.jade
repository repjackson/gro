template(name='group_post_card_small')
    .ui.fluid.card
        .content
            // a.ui.header.zoomer(href="/g/#{group}/p/#{_id}") #{title}
            a.ui.left.aligned.small.header.view_post(href="/g/#{group}/p/#{_id}" class=emotion_color)
                |!{data.title} #{title}
            if embed
                span.rounded.full
                    |!{embed}
                div
            else if is_image
                a.view_post(href="/g/#{group}/p/#{_id}" class=emotion_color)
                    img.ui.fluid.rounded.image.toggle_view(src=data.url)
            else if watson.metadata.image.length
                a.view_post(href="/g/#{group}/p/#{_id}" class=emotion_color)
                    img.ui.fluid.rounded.image.toggle_view(src=watson.metadata.image)
            if image_id
                a(href="/g/#{group}/p/#{_id}")
                    img.ui.fluid.rounded.image(src="{{c.url image_id }}" class=currentUser.invert_class)
            if image_link
                a(href="/g/#{group}/p/#{_id}")
                    +image_link_view key='image_link' direct=true
            if youtube_id
                +youtube_view key='youtube_id' label='youtube id' direct=true
            if is_admin
                +text_edit key='group' label='slug' direct=true
            .f12
                |!{content}
            // a(href="/g/#{group}/p/#{_id}")
            if raw
                |!{raw}
            each tags
                +group_flat_tag_picker
            a.ui.big.icon.circular.basic.button(href="/g/#{group}/p/#{_id}")
                i.right.chevron.big.icon
            +voting_full
            // | #{points}
            // i.thumbs.up.outline.grey.icon
            // | #{comments}
            // i.comment.outline.grey.icon
            span(title="made #{made_when}")
                |{{made_when}}
            if time_tags
                i.clock.icon
                each time_tags
                    .ui.tiny.label #{this}
            if _author_username
                a.ui.basic.label(href="/u/#{_author_username}")
                    i.large.user.outline.icon
                    |#{_author_username}
            // i.dna.link.icon.call_watson
            // if watson
                
                // span.inline.content
                // span.inline.content
            if is_admin
                +remove_button
                +print_this
        +doc_emotion_small        
   
