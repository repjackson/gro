template(name='user_item')
    .item.zoomer.pointer.profile
        .rounded.image
            img(src="{{c.url profile_image_id height=100 width=100 gravity='face' crop='fill'}}") 
        .content
            .header
                .ui.inline.header.pointer.profile(style="color:#{theme_color};")
                    |#{name}
                    //- |#{username}
            .description
                span.ui.text(style="color:#{current_user.theme_color};") #{points}pts
                span.ui.large.text(style="color:#{current_user.theme_color};" title='one ratio') {{to_percent one_ratio}}%
                span.ui.large.text(style="color:#{current_user.theme_color};") #{flow_volume} vol
                each roles
                    .ui.basic.small.label(style="color:#{theme_color};") #{this}
                unless is_this_user
                    i.red.gift.pointer.debit.link.icon
                    i.teal.concierge.bell.pointer.request.link.icon
                    i.blue.chat.pointer.message.link.disabled.icon
                each tags
                    .ui.basic.label #{this}
    

