template(name='users')
    .ui.padded.stackable.grid
        .four.wide.column
            .ui.header
                i.users.icon
                |users
            +user_cloud
        .twelve.wide.column
            .ui.link.list.scrolling
                each users
                    +user_item
                    div




template(name='user_cloud')
    .ui.inline.header
        i.shield.large.icon
        |roles
    if picked_user_roles
        #clear_roles.ui.black.icon.compact.button
            i.remove.icon
        each picked_user_roles
            .unpick_role.ui.black.compact.button
                strong #{this}
    each all_roles
        .ui.compact.basic.button.pick_role(class=cloud_tag_class) 
            strong #{this.name}
    div
    .ui.inline.header
        i.tags.large.icon
        |tags
    if picked_user_tags
        #clear_tags.ui.black.icon.compact.button
            i.remove.icon
        each picked_user_tags
            .unpick_tag.ui.black.compact.button
                strong #{this}
    each all_tags
        .ui.compact.basic.button.pick_tag(class=cloud_tag_class) 
            strong #{this.name}



