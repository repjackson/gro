template(name='delta')
    .ui.stackable.padded.grid
        with current_model
            // unless current_model.show_facets
            //     .middle.aligned.row
            //         .sixteen.wide.column
            //             +model_top
            .row
                if current_model.show_facets
                    .four.wide.column
                        +model_top
                        each sorted_facets
                            +facet
                div(class=result_column_class)
                    unless current_model.show_facets
                        +model_top
                    if current_model.show_filter_bar
                        |&nbsp;
                        .ui.icon.input(class=query_class)
                            if cd.search_query
                                i.link.remove.large.icon.clear_query
                            else
                                i.search.icon
                            input#search(type='text' autocomplete="off" v=cd.search_query)
                        unless single_doc
                            // - .ui.segment(class=loading_class)
                            .ui.inline.small.grey.header(title='change sort direction')
                                |sort by
                            if sortable_fields.count
                                .ui.simple.large.dropdown(title='sort by')
                                    strong #{cd.sort_key}
                                    i.dropdown.icon
                                    .menu
                                        each sortable_fields
                                            .item.set_sort_key 
                                                if icon 
                                                    +icon n=icon
                                                |#{title}
                                .ui.tertiary.icon.button.set_sort_direction(title='sort direction')
                                    if sorting_up
                                        i.sort.amount.down.large.icon
                                    else
                                        i.sort.amount.up.large.icon
                            //- .ui.compact.button.set_sort_direction
                            //-     |#{cd.sort_direction}
                            |&nbsp;
                            |&nbsp;
                            //- .ui.inline.small.grey.header
                            //-     |viewing
                            //- .ui.simple.dropdown(title='visible fields')
                            //-     | fields
                            //-     i.dropdown.icon
                            //-     .menu
                            //-         each model_fields
                            //-             +toggle_visible_field
                            |&nbsp;
                            |&nbsp;
                            |&nbsp;
                        
                            .ui.simple.dropdown(title='result limit')
                                .text.large #{cd.limit}
                                i.dropdown.icon
                                .menu
                                    +set_limit amount=1
                                    +set_limit amount=5
                                    +set_limit amount=10
                                    +set_limit amount=20
                                    +set_limit amount=50
                            |&nbsp;
                            |&nbsp;
                            |&nbsp;
                            |of 
                            .ui.small.inline.header(title='total results') #{cd.total}
                            |&nbsp;
                            |&nbsp;
                            // - with delta
                            // -     +kve k='view_mode' v='list'
                            // -     +kve k='view_mode' v='cards'
                            +set_view_mode title='list' i='list'
                            +set_view_mode title='cards' i='clone'
                            //- .ui.inline.small.grey.header view
                            //- .ui.simple.dropdown.item
                            //-     |#{cd.view_mode}
                            //-     i.dropdown.icon
                            //-     .menu
                            //-         //- +set_view_mode title='table' i='table'
                                    //- +set_view_mode title='items' i='list'
                                    //- +set_view_mode title='map' i='map'
                                    //- +set_view_mode title='graph' i='graph'
                            //- .ui.compact.small.icon.button.toggle_right_panel
                            //-     i.table.large.icon
                            //- .spacer
                    .scrolling
                        //- each cd.result_ids
                        //-     .ui.header #{this}
                        if delta_kv_is 'view_mode' 'cards'
                            .ui.stackable.cards
                                if is_loading
                                    each cd.result_ids
                                        .ui.card
                                            .ui.placeholder
                                                .rectangular.image
                                            .content
                                                .ui.fluid.placeholder
                                                    .header
                                                        .line
                                                    .line
                                                    .line
                                                    .line
                                                    .line
                                else
                                    each cd.result_ids
                                        +delta_result_card
                        else if delta_kv_is 'view_mode' 'list'
                            //- .ui.segments
                            each cd.result_ids
                                if is_loading
                                    .ui.basic.segment
                                        .ui.fluid.placeholder
                                            .line
                                            .line
                                            .line
                                            .line
                                else 
                                    +delta_list_result
                                    // .ui.divider
                    //- +Template.dynamic template=view_mode_template
            .row 
                .sixteen.wide.column
                    if model_stats_exists
                        +Template.dynamic template=model_stats
        unless current_model
            if subs_ready
                if is_dev
                    .ui.big.button.create_model create model
                //- else 
                    //- .ui.header model not found
            //- else
            .ui.basic.segment
                .ui.header
                    i.big.loading.grey.yin.yang.icon
            
            
template(name='model_top')
    if is_loading
        .ui.header
            i.grey.loading.yin.yang.icon
            | loading #{current_model.title}...
    else
        unless kv_is cd.model_filter 'model'
            if is_admin
                a.ui.icon.basic.compact.button.go_home
                    i.big.home.icon
        a.ui.inline.large.header.reset(title="#{description}, #{views} views")
            // +i n=icon
            if color_icon
                +i n=icon
            else 
                i.large.icon(class=icon)
            | #{current_model.title}
    unless is_loading
        if currentUser
            unless kv_is cd.model_filter 'model'
                unless kv_is current_model.collection 'user'
                    // if is_admin
                    i.plus.large.green.link.icon.add_model_doc(title="add #{slug}")
            else 
                if is_admin
                    .ui.icon.basic.button.add_model_doc(title="add #{slug}")
                        i.plus.large.green.icon
        +user_list_toggle k='bookmark_ids' add_i='bookmark outline' remove_i='bookmark' label="bookmark"
        if is_admin
            i.cog.large.link.icon.edit_model(title='edit model')
        if cd
            // if is_admin
            if is_dev
                i.refresh.link.reset.grey.icon(title='reload session')
                i.code.link.icon.print_delta(title='print session doc')
                i.trash.delete_delta.link.icon(title='delete session')
        else
            .create_delta.ui.big.green.button(title='new session')
                i.plus.icon
                |start your session
            
            
            
