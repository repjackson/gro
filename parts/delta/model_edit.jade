template(name='model_edit_layout')
    +nav
    with current_doc
        .ui.stackable.padded.grid            
            .centered.row
                .sixteen.wide.column
                    small editing model
                    .ui.inline.header
                        i.icon(class=icon)
                        |#{title}
                    div
                    |created
                    +creation_info
                    div
                    a.ui.big.icon.green.circular.button(href="/m/#{slug}")
                        i.big.checkmark.icon
                    i#delete_model.trash.red.circular.link.icon
                    // .ui.divider
                    +boolean_edit k='show_filter_bar' label='show filter bar' direct=true
                    +boolean_edit k='show_facets' label='show facets' direct=true
                    a.ui.large.button(href="/model/edit/#{current_doc._id}/" class="{{isActiveRoute 'model_edit_dashboard'}}")
                        i.dashboard.icon
                        |dashboard
                    a.ui.large.button(href="/model/edit/#{current_doc._id}/fields" class="{{isActiveRoute 'model_edit_fields'}}")
                        i.list.icon
                        |fields
                    a.ui.large.button(href="/model/edit/#{current_doc._id}/modules" class="{{isActiveRoute 'model_edit_modules'}}")
                        i.cubes.icon
                        |modules
                    a.ui.large.button(href="/model/edit/#{current_doc._id}/permissions" class="{{isActiveRoute 'model_edit_permissions'}}")
                        i.shield.icon
                        |permissions
                    +yield
                    
                    
                    
template(name='model_edit_dashboard')
    .ui.form
        +text_edit k='title' label='title' direct=true
        +text_edit k='slug' label='slug' direct=true
        +icon_edit k='icon' label='icon' direct=true
        +textarea_edit k='description' label='description' direct=true
        +array_edit k='tags' label='tags' direct=true
        //- +text_edit k='collection' label='collection' direct=true
        +kve k='collection' value='docs' icon='document'
        +kve k='collection' value='users' icon='users'

        //- +multi_doc_edit k='actions' label='actions' ref_model='action' direct=true
        //- +text_edit k='app' label='app' direct=true
        
template(name='model_edit_fields')
    //- |#{model}
    //- each fields
    //-     +Template.dynamic template=edit_template 
    //-     // .ui.header #{key} [#{field}] #{label}
    .spacer
    .ui.inline.header fields
    .ui.icon.large.compact.button.add_field
        i.plus.green.icon
    .spacer
    .ui.segments
        each fields
            +field_edit
        
            
template(name='model_edit_modules')
    .ui.segment
        .ui.header
            +icon name='module'
            |modules
        +boolean_edit k='show_comments' label='comments' icon='chat' direct=true
        +boolean_edit k='show_voting' label='voting' icon='elections' direct=true
    .spacer
    +comments


template(name='model_edit_permissions')
    .ui.header permissions
    +multi_doc_edit k='view_roles' label='view roles' ref_model='role' direct=true


template(name='field_edit')
    .ui.segment.field_segment
        a.title.field_edit(href="#")
            |#{rank}
            if icon
                +icon name=icon cl='ui mini inline image'
                //- i.icon(class=icon)
            .ui.inline.header #{title}
            .ui.label #{field_type}
            if faceted
                i.filter.icon(title='faceted')
            if sortable
                i.sort.amount.down.icon
            each view_roles
                .ui.small.label #{this}
            //- .ui.icon.compact.button
            //-     i.up.caret.icon
            //- .ui.icon.compact.button
            //-     i.down.caret.icon
            if viewing_content    
                i.large.caret.down.icon
            else 
                i.large.caret.right.grey.icon
        if viewing_content
            .content
                +text_edit k='title' label='label' direct=true
                +text_edit k='key' label='key' direct=true
                +number_edit k='rank' label='rank' direct=true      
                +icon_edit k='icon' label='icon' direct=true       
                //- +textarea_edit k='description' label='description' direct=true
                .spacer
                if is_dev
                    +text_edit k='field_type' label='field type' direct=true
                +kve k='field_type' value='text' icon='header'
                +kve k='field_type' value='array' icon='list'
                +kve k='field_type' value='boolean' icon='green toggle off'
                +kve k='field_type' value='number' icon='blue hashtag'
                +kve k='field_type' value='float' icon='blue hashtag'
                +kve k='field_type' value='html' icon='code'
                +kve k='field_type' value='textarea' icon='content'
                +kve k='field_type' value='image' icon='picture'
                +kve k='field_type' value='date' icon='calendar'
                +kve k='field_type' value='time' icon='clock'
                +kve k='field_type' value='link' icon='linkify'
                +kve k='field_type' value='youtube' icon='video'
                +kve k='field_type' value='color' icon='paint brush'
                +kve k='field_type' value='single_doc' icon='clone'
                +kve k='field_type' value='multi_doc' icon='clone'
                +kve k='field_type' value='single_user' icon='clone'
                +kve k='field_type' value='multi_user' icon='clone'
                if is_dev
                    i.large.code.icon
                    +single_doc_edit k='field_type' ref_model='field_type' label='field type' direct=true        
                    .spacer
                    // +text_edit k='field_type_id' label='field type id' direct=true        
                    // +single_doc_edit k='field_type_id' ref_model_slug='field_type' label='field type id' direct=true        
                    .spacer
                    +multi_doc_edit k='view_roles' ref_model_slug='role' label='view roles' direct=true icon='eye'          
                    .spacer
                    +multi_doc_edit k='edit_roles' ref_model_slug='role' label='edit roles' direct=true icon='pencil'        
                    +text_edit k='ref_model' label='reference model' direct=true
                .spacer
                +boolean_edit k='faceted' label='faceted' icon='diamond' direct=true
                +boolean_edit k='sortable' label='sortable' icon='chevron-down' direct=true
                .spacer
                if is_ref  
                    +single_doc_edit k='ref_model' ref_model_slug='model' label='reference model' direct=true
                else if is_user_ref
                    +single_doc_edit k='role_filter' ref_model_slug='role' label='role filter' direct=true
                div             
                +remove_button
                if is_admin
                    +print_this
