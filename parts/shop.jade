template(name='product_edit')
    with current_doc
        .ui.stackable.padded.grid
            .centered.middle.aligned.row 
                .four.wide.center.aligned.column
                    a.ui.green.big.icon.button(href="/product/#{_id}/view")
                        i.checkmark.big.icon
                .eight.wide.center.aligned.column
                    .ui.header 
                        +icon n='product'
                        |edit product: #{title}
                .four.wide.center.aligned.column
                    .ui.red.icon.button.delete_item
                        i.large.remove.icon
            .row
                .four.wide.column
                    .ui.header 
                        small author
                        |#{_author.username}
                    +number_edit k='inventory' l='inventory' d=true                    
                .eight.wide.column
                    +text_edit k='title' l='title' d=true
                    .ui.header
                        |audience
                            
                    +number_edit k='point_price' l='point price' i='hashtag' d=true
