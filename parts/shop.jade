template(name='product_card')
    .ui.card.pointer
        if image_id
            a.image(href="/product/#{_id}/view")
                img.ui.image(src="{{c.url image_id height=500 width=500 gravity='face' crop='fill'}}")
        .content
            a.ui.header(href="/product/#{_id}/view") #{title}
            // |#{when}
            .ui.green.big.label
                |$#{usd_price}
            .ui.teal.big.label 
                |#{point_price}pts



template(name='product_view')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .five.wide.column
                    a(href="/m/product" title='shop')
                        +icolor n='shop' cl='ui inline image pointer'
                        // i.store.big.icon
                        // span.mobile.hidden shop
                    .ui.inline.header 
                        |product
                    .ui.large.inline.header #{title}
                        
                    if can_edit
                        a.ui.icon.button.edit_product(href="/product/#{_id}/edit")
                            i.large.pencil.icon
                            // |edit
                    .ui.header 
                        small author
                    a.ui.header(href="/u/#{_author.username}") 
                        img.ui.avatar.image(src="{{c.url _author.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                        |#{_author.username}
                        
                .six.wide.column
                    +boolean_view k='published' l='published' d=true
                    +image_view k='image_id' l='image' d=true
                    // a.ui.header(href="/u/#{target.username}")
                    //     img.ui.avatar.image(src="{{c.url target.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                    //     |#{target.username}
                    .ui.header $#{usd_price} per item
                    +number_view k='usd_price' l='usd amount' d=true
                    +number_view k='inventory' l='inventory' d=true
                    // if can_buy
                    //     .ui.big.green.button.buy_usd
                    //         |buy #{usd_price}
                    //     .ui.big.green.button.buy_usd
                    //         |buy #{}
                    // .ui.big.green.button.purchase
                    //     |purchase for #{point_price}p and $#{usd_price}
                    +textarea_view k='description' l='description' d=true
                    div 
                    +array_view k='tags' l='tags' d=true
                    .spacer
                    .spacer
                    +comments
                    +voting_full
                    //- +array_view k='location_tags' l='location_tags' d=true
                .five.wide.column
                    .ui.header 
                        +icolor n='shopping-cart-loaded'
                        |buy
                    .ui.big.green.button.buy_for_usd
                        // |buy for 
                        |$#{usd_price}
                    .ui.inline.header or
                    .ui.big.teal.button.buy
                        // i.cart.icon
                        // |buy for 
                        |#{point_price}pts
                    .ui.header your points #{currentUser.calculated_points}
                
                    .ui.header 
                        i.clock.icon
                        |latest purchases
                    .ui.large.link.selection.list
                    
                        each product_transactions
                            a.ui.item(href="/debit/#{_id}/view") 
                                .content
                                    .header
                                        if is_usd
                                            .ui.inline.green.header $ #{amount}cents
                                        else
                                            .ui.inline.header #{point_amount}pts
                                        
                                        |#{when} #{_author_username}
                            if is_admin
                                +remove_button
                
                    .ui.small.grey.header 
                        i.line.chart.icon
                        |stats
                    .ui.list
                        .item #{views} views
                    each viewers
                        .ui.label #{username
                    
