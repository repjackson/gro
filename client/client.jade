template(name='layout')
    .ui.bottom.attached.pushable.segment
        #main_area.global_container.pusher
            +yield


template(name='not_found')
    .ui.basic.center.aligned.segment
        .ui.header page not found
        a(href="/")
            i.massive.yin.yang.link.icon
            
            
template(name='home')
    .ui.stackable.grid
        .sixteen.wide.center.aligned.column.seg
            if counter
                .ui.inline.grey.header    
                    |#{counter}
            if picked_tags
                // if many_tags
                //     a#clear_tags.ui.black.invert.icon.compact.button.pick_term
                //         i.remove.icon
                each picked_tags
                    +unpick_tag
            .ui.icon.large.input
                if is_loading
                    i.yin.yang.loading.icon
                else
                    i.search.icon
                input.search_tag(type='text' value=query)
                // .ui.label #{this}
            each result_tags
                +tag_picker
            each posts
                +post_card_small
                
                
                
template(name='tag_picker')
    // a.ui.big.image.rounded.label.zoomer.pointer.pick_tag.pick_term(href='#' title="#{count} results" class="#{picker_class} #{thinking_class}")
    a.ui.compact.circular.button.zoomer.pick_tag(title="#{count} results" class="#{picker_class} #{thinking_class}")
        // if term
        //     if term.watson.metadata.image
        //         img.ui.avatar.image.superzoom(src=term.watson.metadata.image )    
        strong #{name}
