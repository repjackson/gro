template(name='post_view')
    with current_doc
        .ui.stackable.grid
            .row 
                .twelve.wide.column.scrolling
                    .ui.center.aligned.header #{title}
                    if image_link
                        +image_link_view key='image_link' direct=true
                    if image_id
                        img.ui.fluid.rounded.image.no_left(src="{{c.url image_id }}" )
                    if youtube_id
                        .no_left
                            +youtube_view key='youtube_id' label='youtube id' direct=true
                    if raw 
                        |!{raw}
                    .say_this.say_body.f11
                        |!{content}
                    .say_this.say_body.f11
                        |!{description}
                    .say_this.say_body.f11
                        |!{body}
