                    i.big.yin.yang.grey.icon
            a.icon.zoomer.item.goto_vid(href='/pics' class="{{isActivePath regex='pics'}}" title='pics')
                i.large.picture.grey.icon
            a.icon.zoomer.item.goto_vid(href='/github' class="{{isActivePath regex='github'}}" title='github')
                i.large.grey.github.icon
            a.icon.zoomer.item.clear_tags.goto_reddit(href='/reddit' class="{{isActiveRoute regex='reddit'}}" title='reddit')
                i.large.reddit.grey.icon
            a.icon.zoomer.item.silence(href='#')
                i.large.volume.mute.grey.icon
        unless connected
