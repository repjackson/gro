template(name='group_unselect_tag')
    a.unselect_group_tag.ui.large.active.compact.button(href='#')
        if term
            if term.watson.metadata.image
                img.ui.avatar.compact.image.superzoom(src=term.watson.metadata.image)    
        strong #{this}

        
        
