template(name='ruser')
    unless ruser_doc
        // .ui.header no user found
        .ui.hidden.divider
        .ui.hidden.divider
        .ui.hidden.divider
        .ui.center.aligned.basic.segment.search
            i.massive.grey.yin.yang.loading.link.icon.get_user_info
        // .ui.massive.fluid.button.f17.zoomer.pointer.search 
        //     i.download.icon
            // |download user info
    with ruser_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    // a.ui.icon.button(href="/rusers")
                    //     i.chevron.left.icon
                    //     i.large.users.icon
                    img.ui.small.image(src=data.snoovatar_img)
                    .ui.large.inline.header.get_user_posts(class=post_header_class)
                        |!{username} 
                        small(title='reputation') {{ commafy karma }}
                        // strong(title="#{site} rank") ##{site_rank} 
                        strong(title='global rank') ##{global_rank}
                    with data
                        .ui.small.list
                            .item #{total_karma} total karma
                            .item #{comment_karma} comment karma
                            .item #{link_karma} link karma
                            .item #{awardee_karma} awardee karma
                            .item #{awarder_karma} awarder karma
                            .item created {{ufrom created_utc}}
                        if is_gold
                            i.large.yellow.star.icon(title='is gold')
                        if is_mod
                            i.large.blue.shield.icon(title='is mod')
                        if has_verified_email
                            i.large.mail.icon(title='verified email')
                    // i.info.icon.get_user_info
                    img.ui.rounded.inline.image.pointer.zoomer(src=profile_image)
                    a.ui.compact.basic.icon.button(href="http://www.reddit.com/user/#{username}" target='_window' title="#{site} profile")
                        i.reddit.icon
                        i.external.icon
                    if in_dev
                        +print_this
                    +ruser_top_emotions
                    div
                    .ui.small.inline.header 
                        i.tag.icon
                        |top tags
                    each tags
                        .ui.compact.basic.button.search_tag #{this}
                .four.wide.column
                    .ui.header.call_related 
                        i.fork.icon
                        |related users
                    .scrolling
                        each related_users
                            a.ui.horizontal.card(href="/user/#{username}")
                                .content
                                    img.ui.small.image(src=data.snoovatar_img)
                                    a.ui.small.header
                                        |#{username}
                                    each tags 
                                        .ui.basic.small.label #{this}
                    if selected_ruser_time_tags
                        each selected_ruser_time_tags
                            +ruser_post_unselect_time_tag
                    // .ui.icon.input
                    //     i.search.icon
                    //     input.search_ruser_postreddit(type='text')
                
                .four.wide.column
                    .ui.inline.header 
                        i.edit.icon
                        |posts
                    each selected_ruser_post_tags
                        a.ui.label.unselect_ruser_post_tag #{this}
                    each ruser_post_tag_results
                        a.ui.basic.small.link.label.select_ruser_post_tag(title=count) #{name}
                        |&nbsp;
                    div 
                    i.large.clock.icon
                    each selected_ruser_post_time_tags
                        a.ui.label #{this}
                    each ruser_post_time_tag_results
                        a.ui.basic.small.link.label.select_ruser_post_time_tag(title=count) #{name}
                        |&nbsp;
                    // .ui.circular.icon.button.rpost_skip_right
                    //     i.chevron.right.icon
                    // .ui.circular.icon.button.rpost_skip_left
                    //     i.chevron.left.icon
                    .scrolling
                        each ruser_rposts
                            +ruser_post
                .four.wide.column
                    .ui.inline.header.get_user_comments
                        i.chat.outline.icon
                        |comments
                    each ruser_comment_tag_results
                        // .ui.label #{this}
                        // +ruser_post_selector
                        .ui.small.basic.label(title=count) #{name}
                    .scrolling
                        each rcomments
                            +ruser_comment
                            // .ui.divider
                    
                    
                    
