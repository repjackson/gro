template(name='comments')
    .spacer
    .ui.inline.grey.header
        i.chat.outline.icon
        |comments
    div
    .ui.fluid.icon.large.input
        i.plus.icon
        input.add_comment(model='text' placeholder='add')
    .ui.comments
        each doc_comments
            .comment
                a.avatar
                    img.ui.avatar.image(src="{{c.url _author.profile_image_id height=500 width=500 gravity='face' crop='fill'}}") 
                .content
                    a.author(href="/u/#{_author.username}")
                        |#{_author.name}
                    .metadata
                        span.date #{when}
                    .text
                        | !{body}
                    span.actions
                        if can_edit
                            +remove_icon
                        else
                            +voting_small




