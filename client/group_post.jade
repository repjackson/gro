template(name='group_post_view')
    with current_doc
        .ui.stackable.padded.grid
            .row 
                .three.wide.column
                    a.ui.circular.basic.large.icon.button(href="/group/#{course_id}")
                        i.chevron.left.icon
                    .ui.large.inline.header #{title}
                    // div
                    // .ui.inline.grey.header {{from_now start_datetime}}
                    
                    if can_edit
                        a.edit_group_post(href="/group/#{group_id}/post/#{_id}/edit" title='edit')
                            i.large.circular.link.pencil.icon
                    img.ui.fluid.rounded.image(src="{{c.url image_id }}" class=currentUser.invert_class)
                    .ui.list
                        .item #{views} views
                    each viewers
                        .ui.label #{username
                    if is_admin
                        +array_edit key='tags' label='tags' direct=true
                    else     
                        +array_view key='tags' label='tags' direct=true
                    
                    // +voting_full
                    +link_edit key='link' label='link' direct=true

                    +array_view key='time_tags' label='time tags' icon='clock' direct=true
                    +array_view key='location_tags' label='location tags' icon='marker' direct=true
                .thirteen.wide.column
                    if youtube_id
                        +youtube_view key='youtube_id' label='youtube id' direct=true
                    if raw 
                        |!{raw}
                    .scrolling
                        |!{content}
                    div 
                    .spacer
                    .spacer
                    // +comments
                    // if watson
                    //     +watson_view

template(name='group_post_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    a.ui.icon.green.big.circular.button(href="/group/#{course_id}/post/#{_id}" title='save')
                        i.checkmark.big.icon
                    .ui.inline.header 
                        i.pencil.icon
                        |edit group post
                    i.large.link.circular.red.remove.icon.delete_group_post
                    +image_edit key='image_id' label='image' direct=true
                    div 
                    +array_edit key='tags' label='tags' direct=true
                    +link_edit key='link' label='link' direct=true
                    if is_admin 
                        +text_edit key='model' label='model' direct=true
                    +array_edit key='time_tags' label='time tags' icon='clock' direct=true
                    +array_edit key='location_tags' label='location tags' icon='marker' direct=true
                .twelve.wide.column
                    +youtube_edit key='youtube_id' label='youtube id' direct=true
                    +text_edit key='title' label='title' direct=true
                    +html_edit key='content' label='content' direct=true
                    +raw_edit key='raw' label='raw' direct=true
        